{
  "name": "sondages-repas",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "bash scripts/vercel-build-auto.sh",
    "build-manual": "NODE_ENV=production node scripts/validate-db-url.js && prisma generate --schema=./prisma/schema.prisma && prisma migrate deploy --schema=./prisma/schema.prisma && ESLINT_DISABLE_WARNINGS=1 next build --no-lint",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate --schema=./prisma/schema.prisma",
    "prepare-vercel": "bash scripts/prepare-vercel-deploy.sh",
    "vercel-build": "bash scripts/vercel-build.sh",
    "check-db": "node scripts/check-database-sync.js",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --name",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "test-csv": "node scripts/test-csv-export.js",
    "setup-postgres": "node scripts/setup-postgres.js",
    "cleanup": "node scripts/cleanup-sqlite.js",
    "init-admin": "node scripts/init-admin.js",
    "fix-prisma": "node scripts/fix-prisma-schema.js && node scripts/fix-db-files.js && npm run prisma:generate"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.4.9",
    "iron-session": "^8.0.4",
    "jsonwebtoken": "^9.0.2",
    "next": "15.3.2",
    "papaparse": "^5.5.3",
    "pg": "^8.16.0",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "postcss": "^8.5.3",
    "prisma": "^6.8.2",
    "tailwindcss": "^4.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
